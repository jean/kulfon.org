<meta charset="utf-8">
<meta name="viewport" content="width=device-width,initial-scale=1">

<meta name="description" content="{{ page.description or website.meta.description }}">

<!-- Open Graph -->
<meta property="og:type" content="article"/>
<meta property="og:description" content="{{ page.description or website.meta.description }}"/>
<meta property="og:title" content="{{ page.title or website.title }}"/>
<meta property="og:site_name" content="{{ website.name }}"/>
<meta property="og:url" content="{{ website.url }}">
<meta property="og:locale" content="en_US">

<!-- Twitter Cards -->
<meta name="twitter:card" content="summary">
<meta name="twitter:site" content="{{ website.name }}">
<meta name="twitter:title" content="{{ page.title or website.title }}">
<meta name="twitter:creator" content="{{ website.author }}">
<meta name="twitter:description" content="{{ page.description or website.meta.description }}">
<meta name="twitter:domain" content="{{ website.url }}">
